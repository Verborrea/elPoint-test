<style>
	header {
		display: flex;
		padding: 16px;
		justify-content: space-between;
	}
	h1 {
		font-size: 18px;
		line-height: 22px;
	}
	.buttons {
		display: flex;
		align-items: center;
   		gap: 8px;
	}
	svg, img {
		display: block;
	}
	img {
		border-radius: 50%;
	}
	main {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}
	footer {
		text-align: center;
		padding: 20px;
	}
</style>
